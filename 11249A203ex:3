#include <stdio.h>
#include <stdlib.h> 
#define MAX_SIZE 5 
int stack[MAX_SIZE]; 
int top = -1; 
void push(int data);
int pop();
int peek();
void display();
int isFull();
int isEmpty();
int isFull() {
    return top == MAX_SIZE - 1;
}
int isEmpty() {
    return top == -1;
}
void push(int data) {
    if (isFull()) {
        printf(" Stack Overflow! Cannot push %d.\n", data);
    } else {
        top++;
        stack[top] = data;
        printf(" Pushed: %d\n", data);
    }
}
int pop() {
    int data = -1; 
    if (isEmpty()) {
        printf(" Stack Underflow! Cannot pop.\n");
    } else {
        data = stack[top];
        top--;
        printf("ðŸ—‘ï¸ Popped: %d\n", data);
    }
    return data;
}
int peek() {
    if (isEmpty()) {
        printf(" Stack is empty.\n");
        return -1; 
    } else {
        return stack[top];
    }
}
void display() {
    if (isEmpty()) {
        printf("\nStack is empty. Nothing to display.\n");
        return;
    }
    printf("\n--- Stack Elements (Top to Bottom) ---\n");
    for (int i = top; i >= 0; i--) {
        printf("| %d |\n", stack[i]);
        if (i == top) {
            printf("------ (TOP)\n");
        } else if (i == 0) {
            printf("------ (BOTTOM)\n");
        } else {
            printf("------\n");
        }
    }
}
int main() {
    printf("--- Array Stack Demonstration (Max Size: %d) ---\n", MAX_SIZE);
    push(10);
    push(20);
    push(30);
    push(40);
    push(50);
    push(60); 
    display();
    printf("\nTop element (Peek): %d\n", peek());
    pop();
    pop();
    display();
    pop();
    pop();
    pop();
    pop(); 
    printf("\n--- End of Demo ---\n");
    return 0;
}

#include <stdio.h>

#define MAX_SIZE 100

void insert(int arr[], int *size, int element, int index) {
    if (*size >= MAX_SIZE) {
        printf("Array is full.\n");
        return;
    }
    for (int i = *size; i > index; i--) {
        arr[i] = arr[i - 1];
    }
    arr[index] = element;
    (*size)++;
}

